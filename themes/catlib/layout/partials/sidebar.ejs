<div class="sidebar">
    <ul class="menu-root">
        <% site.pages.find({type: page.type , lang: page.lang}).sort('order').each(function (p) { %>
            <% var fileName = p.path.replace(/^.+?\/([\w-]+)\.html/, '$1') %>
            <li>
                <a href="<%- url_for(p.path) %>" class="sidebar-link<%- page.title === p.title ? ' current' : '' %><%- p.is_new ? ' new' : '' %>"><%- p.title %></a>
            </li>
        <% }) %>
    </ul>
</div>